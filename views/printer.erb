<style>
* {
  font-family: Arial !important;
  text-align: center;
}

small {
  font-size: 60%;
  color: #cccccc;
  font-style: oblique;
}

h5 {
  font-size: 20px;
  line-height: 1;
}


.text {
  font-weight: normal;
}

.price {
  max-height: 80px;
  overflow: hidden;
}

.name, .price, .notes, .user, .date, .codes {
  border: 1px solid #000000;
  border-collapse: collapse;
  margin: 5px;
  padding-left: 15px;
  margin-left: auto;
  margin-right: auto;
}

</style>
<div class="info clearfix">
  <div class="name">
    <h1>
      <%= @entity.name %> 
      <small>
        <% if @entity.sku.nil? %>
        <% else %>
        (<%= @entity.sku %>) 
        <% end %>
        Qty: <%= @entity.quantity %>
      </small>
    </h1>
  </div>
  <div class="date">
    <h1><%= @entity.created_at.strftime("%m-%d-%Y") %></h1>
  </div>
  <div class="price">
    <% if @entity.cash_price != 0 and @entity.credit_price != 0 %>
      <h5>Cash price: $<%= currency(@entity.cash_price) %></h5>
      <hr noshade color="#b5b5b5">
      <h5>Credit price: $<%= currency(@entity.credit_price) %></h5>
    <% else %>
      <% if @entity.credit_price != 0 %>
        <h5>Credit price: $<%= currency(@entity.credit_price) %></h5>
      <% else %>
        <h5>Cash price: $<%= currency(@entity.cash_price) %></h5>
      <% end %>
    <% end %>
  </div>
  <% if @entity.notes.blank? %>
  <% else %>
  <div class="notes">
    <h4>Notes: <span class="text"><%= @entity.notes %></span></h4>
  </div>
  <% end %>
  <div class="user">
    <h4>Employee: <%= @entity.user_id %></h4>
  </div>
  <div class="codes">
    <h2>*insert QR and barcodes here*</h2>
  </div>
</div>